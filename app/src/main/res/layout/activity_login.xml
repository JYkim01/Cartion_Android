<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd2"
            android:text="소음에서"
            android:textColor="@android:color/white"
            android:textSize="18.03sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd6"
            android:text=" 소통"
            android:textColor="@android:color/white"
            android:textSize="18.03sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd2"
            android:text="으로"
            android:textColor="@android:color/white"
            android:textSize="18.03sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scd6"
            android:text=" &quot;카션&quot;"
            android:textColor="@android:color/white"
            android:textSize="18.03sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_login_email"
            android:fontFamily="@font/scd3"
            android:hint="E-MAIL"
            android:inputType="textEmailAddress"
            android:paddingStart="45dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="12.34sp" />

        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/ic_login_password"
            android:fontFamily="@font/scd3"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:paddingStart="45dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="12.34sp" />

        <ImageButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:src="@drawable/login_drawable" />

        <TextView
            android:id="@+id/login_forgot_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/scd5"
            android:text="아이디/비밀번호를 잃어버리셨나요?"
            android:textColor="@android:color/white"
            android:textSize="10.44sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scd3"
                android:text="아직 회원이 아니신가요? "
                android:textColor="@android:color/white"
                android:textSize="11.39sp" />

            <TextView
                android:id="@+id/login_sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scd3"
                android:text="회원가입"
                android:textColor="@android:color/white"
                android:textSize="17.08sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>