<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_cartion_serial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/scd5"
        android:textColor="@color/color_7F44A6"
        android:textSize="11.39dp"
        tools:text="SerialNumber" />

    <EditText
        android:id="@+id/item_cartion_nic_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/scd5"
        android:gravity="center_horizontal"
        android:hint="별명"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_7F44A6"
        android:textSize="11.39dp" />

    <ImageButton
        android:id="@+id/item_cartion_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ic_delete" />

</LinearLayout>